<idea-plugin version="2">

  <depends optional="false">org.jetbrains.idea.maven</depends>
  <depends optional="true">org.jetbrains.plugins.yaml</depends>

  <id>com.demonwav.minecraft-dev</id>
    <name>Minecraft Development</name>
    <version>alpha-0.0.1</version>
    <vendor>DemonWav</vendor>

  <description><![CDATA[
      Brings support for Bukkit, Spigot, Paper, BungeeCord, Sponge, and Forge Projects to Intellij IDEA.
    ]]></description>

  <change-notes><![CDATA[
      Alpha release, not many features, may break. More features to come.
    ]]>
  </change-notes>

  <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="145"/>

  <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
    <moduleType id="BUKKIT_MODULE_TYPE" implementationClass="com.demonwav.BukkitModuleType"/>
    <moduleType id="SPIGOT_MODULE_TYPE" implementationClass="com.demonwav.SpigotModuleType"/>
    <moduleType id="BUNGEECORD_MODULE_TYPE" implementationClass="com.demonwav.BungeeCordModuleType"/>
    <fileTemplateGroup implementation="com.demonwav.util.BukkitFileTemplateGroupFactory"/>
  </extensions>
  <extensions defaultExtensionNs="org.jetbrains.idea.maven">
    <importer implementation="com.demonwav.maven.BukkitImporter"/>
    <importer implementation="com.demonwav.maven.SpigotImporter"/>
    <importer implementation="com.demonwav.maven.BungeeCordImporter"/>
  </extensions>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
  </actions>

</idea-plugin>
